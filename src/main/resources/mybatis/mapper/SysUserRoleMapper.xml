<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bdu.laborder.mapper.SysUserRoleMapper">
    <resultMap id="SysUserRoleResult" type="com.bdu.laborder.common.core.domain.entity.SysUserRole">
        <result property="userId" column="user_id"      />
        <result property="roleId" column="role_id"      />
    </resultMap>

    <insert id="batchUserRole">
        insert into s_user_role (user_id,role_id) values
        <foreach item="item" index="index" collection="list" separator="," >
            (#{item.userId},#{item.roleId})
        </foreach>
    </insert>

    <select id="selectRoleListByUserId" resultType="java.lang.String">
        select r.role_id from s_role r
        left join s_user_role ur on ur.role_id = r.role_id
        left join s_user u on u.user_id = ur.user_id
        where u.user_id = #{userId}
    </select>

    <delete id="deleteUserRoleByUserId">
        delete from s_user_role where user_id=#{userId}
    </delete>

    <delete id="deleteUserRole">
        delete from s_user_role where user_id in
        <foreach collection="array" item="userId" open="("  separator="," close=")">
            #{userId}
        </foreach>
    </delete>
</mapper>