<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bdu.laborder.mapper.SysRoleMenuMapper">
    <resultMap id="SysRoleMenuResult" type="com.bdu.laborder.common.core.domain.entity.SysRoleMenu">
        <result property="roleId" column="role_id" />
        <result property="menuId" column="menu_id" />
    </resultMap>

    <select id="checkMenuExistRole" resultType="int">
        select count(1) from s_role_menu where menu_id = #{menuId}
    </select>

    <insert id="batchRoleMenu">
        insert into s_role_menu (role_id,menu_id) values
        <foreach collection="list" item="item" index="index" separator=",">
            (#{item.roleId},#{item.menuId})
        </foreach>
    </insert>

    <delete id="deleteRoleMenu">
        delete from s_role_menu where role_id in
        <foreach collection="array" item="roleId" open="(" separator="," close=")">
            #{roleId}
        </foreach>
    </delete>

    <delete id="deleteRoleMenuByRoleId">
        delete from  s_role_menu where role_id = #{roleId}
    </delete>
</mapper>